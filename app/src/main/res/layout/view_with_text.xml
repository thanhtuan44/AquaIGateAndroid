<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cstViewWithText"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <View
        android:id="@+id/vwWithText"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:background="@color/colorBackGround"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>
    <TextView
        android:id="@+id/txvViewWithText"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginEnd="20dp"
        android:layout_marginStart="10dp"
        android:gravity="center_vertical"
        android:text="View With Text"
        app:layout_constraintEnd_toEndOf="@id/vwWithText"
        app:layout_constraintStart_toStartOf="@id/vwWithText"
        app:layout_constraintTop_toTopOf="@+id/vwWithText"
        app:layout_constraintBottom_toBottomOf="@+id/vwWithText"/>

</android.support.constraint.ConstraintLayout>