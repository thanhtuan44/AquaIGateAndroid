<layout  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data class="vn.aquavietnam.aquaiget.DiaLogBinding">
        <variable
            name="dialogVM"
            type="vn.aquavietnam.aquaiget.service.customdialogfragment.ListDiaLogVM" />
    </data>
    <RelativeLayout
        android:id="@+id/rltLayoutDialog"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/cstLayoutDialog">
            <View
                android:id="@+id/vwTitle"
                android:background="@color/colorWhite"
                android:layout_width="0dp"
                android:layout_height="44dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>
            <Button
                android:id="@+id/btnClose"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:background="@color/colorTranparent"
                app:layout_constraintStart_toStartOf="@+id/vwTitle"
                app:layout_constraintTop_toTopOf="@+id/vwTitle"
                app:layout_constraintBottom_toBottomOf="@+id/vwTitle"/>
            <Button
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginRight="40dp"
                android:background="@drawable/iconclose"
                android:backgroundTint="@color/colorAqua"
                app:layout_constraintStart_toStartOf="@+id/btnClose"
                app:layout_constraintEnd_toEndOf="@+id/btnClose"
                app:layout_constraintTop_toTopOf="@+id/btnClose"
                app:layout_constraintBottom_toBottomOf="@+id/btnClose"/>
            <TextView
                android:id="@+id/lblTitle"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:layout_marginStart="44dp"
                android:layout_marginEnd="60dp"
                android:background="@color/colorWhite"
                android:text="Title"
                android:gravity="center"
                app:layout_constraintTop_toTopOf="@+id/btnClose"
                app:layout_constraintBottom_toBottomOf="@+id/btnClose"
                />
            <Button
                android:id="@+id/btnDone"
                android:layout_width="60dp"
                android:layout_height="0dp"
                android:text="@string/done"
                android:textAllCaps="false"
                android:background="@color/colorTranparent"
                android:textColor="@color/colorAqua"
                android:gravity="center"
                app:layout_constraintTop_toTopOf="@+id/btnClose"
                app:layout_constraintBottom_toBottomOf="@+id/btnClose"
                app:layout_constraintEnd_toEndOf="parent"
                />
            <View
                android:id="@+id/vwLineBottom"
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:background="@color/colorLine"
                app:layout_constraintStart_toStartOf="@+id/vwTitle"
                app:layout_constraintEnd_toEndOf="@+id/vwTitle"
                app:layout_constraintTop_toBottomOf="@+id/vwTitle"/>
            <android.support.v7.widget.RecyclerView
                android:id="@+id/rclvDialog"
                android:layout_width="0dp"
                android:background="@color/colorWhite"
                android:layout_height="0dp"
                app:layout_constraintHeight_default="wrap"
                app:layout_constraintHeight_max="250dp"
                app:layout_constraintHeight_min="250dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/vwLineBottom"
                app:configuration="@{dialogVM.recyclerConfiguration}" />

        </android.support.constraint.ConstraintLayout>
    </RelativeLayout>
</layout>