<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data class="vn.aquavietnam.aquaiget.NonScanRowBinding">
        <import type="vn.aquavietnam.aquaiget.StringUtils"/>
        <variable
            name="nonScan"
            type="vn.aquavietnam.aquaiget.model.NonScan" />
    </data>
    <com.daimajia.swipe.SwipeLayout
        android:id="@+id/swipeLayout"
        app:drag_edge="right"
        app:show_mode="pull_out"
        android:layout_width="match_parent"
        android:layout_height="54dp">
        <!-- Bottom View Start-->
        <android.support.constraint.ConstraintLayout
            android:id="@+id/cstRowNonScan"
            android:background="@color/colorWhite"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">
            <View
                android:id="@+id/vwDateOff"
                app:layout_constraintDimensionRatio="H,1:1"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent" />
            <View
                android:id="@+id/vwLineLeft"
                android:background="@color/colorLine"
                android:layout_width="1dp"
                android:layout_height="0dp"
                app:layout_constraintTop_toTopOf="@+id/vwDateOff"
                app:layout_constraintBottom_toBottomOf="@+id/vwDateOff"
                app:layout_constraintStart_toStartOf="@+id/vwDateOff"
                />
            <View
                android:id="@+id/vwLineRight"
                android:background="@color/colorLine"
                android:layout_width="1dp"
                android:layout_height="0dp"
                app:layout_constraintTop_toTopOf="@+id/vwDateOff"
                app:layout_constraintBottom_toBottomOf="@+id/vwDateOff"
                app:layout_constraintStart_toEndOf="@+id/vwDateOff"
                />
            <View
                android:id="@+id/vwRowNonScan"
                app:layout_constraintDimensionRatio="H,1:1"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@+id/vwLineRight"/>
            <View
                android:id="@+id/vwLineRightNonScan"
                android:background="@color/colorLine"
                android:layout_width="1dp"
                android:layout_height="0dp"
                app:layout_constraintTop_toTopOf="@+id/vwRowNonScan"
                app:layout_constraintBottom_toBottomOf="@+id/vwRowNonScan"
                app:layout_constraintStart_toEndOf="@+id/vwRowNonScan"
                />
            <View
                android:id="@+id/vwBusinessTrip"
                app:layout_constraintDimensionRatio="H,1:1"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@+id/vwLineRightNonScan"/>
            <ImageButton
                android:id="@+id/btnDateOff"
                android:layout_width="30dp"
                android:layout_height="30dp"
                app:layout_constraintStart_toStartOf="@+id/vwDateOff"
                app:layout_constraintTop_toTopOf="@+id/vwDateOff"
                app:layout_constraintBottom_toBottomOf="@+id/vwDateOff"
                app:layout_constraintEnd_toEndOf="@+id/vwDateOff"
                android:background="@drawable/icondateoff"/>
            <ImageButton
                android:id="@+id/btnNonScan"
                android:layout_width="30dp"
                android:layout_height="30dp"
                app:layout_constraintStart_toStartOf="@+id/vwRowNonScan"
                app:layout_constraintTop_toTopOf="@+id/vwRowNonScan"
                app:layout_constraintBottom_toBottomOf="@+id/vwRowNonScan"
                app:layout_constraintEnd_toEndOf="@+id/vwRowNonScan"
                android:background="@drawable/iconnonscan"/>
            <ImageButton
                android:id="@+id/btnBussinessTrip"
                android:layout_width="30dp"
                android:layout_height="30dp"
                app:layout_constraintStart_toStartOf="@+id/vwBusinessTrip"
                app:layout_constraintTop_toTopOf="@+id/vwBusinessTrip"
                app:layout_constraintBottom_toBottomOf="@+id/vwBusinessTrip"
                app:layout_constraintEnd_toEndOf="@+id/vwBusinessTrip"
                android:background="@drawable/iconbussinesstrip"/>
            <View
                android:id="@+id/vwLineBottomRightButton"
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:background="@color/colorLine"
                app:layout_constraintEnd_toEndOf="@id/cstRowNonScan"
                app:layout_constraintStart_toStartOf="@id/cstRowNonScan"
                app:layout_constraintBottom_toBottomOf="@id/cstRowNonScan" />
        </android.support.constraint.ConstraintLayout>
        <!-- Bottom View End-->

        <!-- Surface View Start -->
        <LinearLayout
            android:background="#ffffff"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="54dp"
                android:id="@+id/cstLayoutBaseWorkDate">
                <TextView
                    android:id="@+id/lblDate"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:paddingStart="10dp"
                    android:gravity="center_vertical"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toStartOf="@+id/lblIn"
                    android:text="@{nonScan.workDate}"
                    />
                <View
                    android:id="@+id/vwLine1"
                    android:layout_width="1dp"
                    android:layout_height="0dp"
                    android:background="@color/colorLine"
                    app:layout_constraintEnd_toEndOf="@+id/lblDate"
                    app:layout_constraintBottom_toBottomOf="@+id/lblDate"
                    app:layout_constraintTop_toTopOf="@+id/lblDate" />
                <TextView
                    android:id="@+id/lblIn"
                    android:layout_width="95dp"
                    android:layout_height="0dp"
                    android:gravity="center"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@+id/lblOut"
                    android:text="@{nonScan.timeIn}"
                    />
                <View
                    android:id="@+id/vwLine2"
                    android:layout_width="1dp"
                    android:layout_height="0dp"
                    android:background="@color/colorLine"
                    app:layout_constraintEnd_toEndOf="@+id/lblIn"
                    app:layout_constraintBottom_toBottomOf="@+id/lblIn"
                    app:layout_constraintTop_toTopOf="@+id/lblIn" />
                <TextView
                    android:id="@+id/lblOut"
                    android:layout_width="95dp"
                    android:layout_height="0dp"
                    android:gravity="center"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:text="@{nonScan.timeOut}"
                    />
                <View
                    android:id="@+id/vwLineBottom"
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:background="@color/colorLine"
                    app:layout_constraintEnd_toEndOf="@+id/cstLayoutBaseWorkDate"
                    app:layout_constraintStart_toStartOf="@+id/cstLayoutBaseWorkDate"
                    app:layout_constraintBottom_toBottomOf="@+id/cstLayoutBaseWorkDate" />
            </android.support.constraint.ConstraintLayout>
        </LinearLayout>
        <!-- Surface View End -->
    </com.daimajia.swipe.SwipeLayout>

</layout>