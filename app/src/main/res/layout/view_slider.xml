<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:attrs="http://schemas.android.com/apk/res-auto">
    <data class="vn.aquavietnam.aquaiget.AquaSliderBinding">
    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.v4.view.ViewPager
            android:id="@+id/vpSlider"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <vn.aquavietnam.aquaiget.common.customview.slider.PageIndicatorView
            android:id="@+id/pageIndicatorView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:paddingBottom="20dp"
            android:layout_centerHorizontal="true"
            app:piv_animationType="slide"
            app:piv_dynamicCount="true"
            app:piv_selectedColor="@color/colorAqua"
            app:piv_unselectedColor="@color/colorLine"
            app:piv_interactiveAnimation="true"
            app:piv_viewPager="@id/vpSlider" />
    </RelativeLayout>
</layout>

